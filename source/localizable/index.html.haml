  %body
    .wrapper
      %header.masthead
        %a.logo{ :href => 'http://internetmadeinbcn.org' }
          %span.logo__internet Internet
          %span.logo__madeinbcn Made in BCN
        %h1.mission&=I18n.t(:mission)
        %p.intro&=I18n.t(:intro)
        %a.language-switch{ :href => I18n.locale.to_s === 'es' ? 'ca' : '/' } #{I18n.locale.to_s === 'es' ? 'CAT' : 'ES'}

      %section.join
        .apply-toggle
          %a.btn.btn--join.js-btn-join{ :href => '#' }
            %span&="+ " + I18n.t(:add_yours)

        .apply.cf
          .apply-rules.cf
            %article
              %h3&="1. " + I18n.t(:conditions_question)
              %p&=I18n.t(:conditions_answer)
            %article
              %h3&="2. " + I18n.t(:foreign_code_question)
              %p&=I18n.t(:foreign_code_answer)
            %article
              %h3&="3. " + I18n.t(:traffic_question)
              %p&=I18n.t(:traffic_answer)
          .apply-form
            %div{ :id => "wufoo-" + I18n.t(:wufoo_form_id) }

      %ol.startups.cf
        -data.startups.each do |startup|
          %li.company
            - if startup.has_key?('jobs')
              %a.jobs.btn.btn--mini.btn--faded{ :href => startup.jobs, 'title' => startup.name + ' ' + I18n.t(:jobs) }
                %span #{ I18n.t(:jobs) }
            %a{ :href => startup.url, 'title' => startup.name + startup.description }
              =image_tag 'logos/'+startup.slug.downcase+'.png', :alt => startup.name, :width => '150', :height => '150'
              %h2.name.delta&= startup.name
              %p.description.milli&= startup.description

      %footer.cf
        .logo-symbol
        .more-info.milli
          %strong&=I18n.t(:more_info_and_contact)
          %a{ :href => "mailto:hola@internetmadeinbcn.org"} hola@internetmadeinbcn.org
        .more-info.milli
          %strong&=I18n.t(:creators_are)
          %ul.nav
            -data.creators.each do |creator|
              %li.creator
                %a{ :href => creator.url }&= creator.twitter

